    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "apollo-server-express": "^3.12.1",
    "bcrypt": "^6.0.0",
