    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.6.0",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
